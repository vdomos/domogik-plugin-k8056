{
    "json_version": 2,
    "identity": {
        "author": "domos", 
        "author_email": "domos.vesta at gmail.com", 
        "tags": ["computer"], 
        "dependencies": [
            {   
                "id": "pyserial (>=2.5)",
                "type": "python"
            }
        ],
        "description": "Domogik Plugin for k8056 relay board", 
        "domogik_min_version": "0.4.0", 
        "name": "k8056", 
        "type": "plugin", 
        "version": "0.1"
    }, 
    "products" : [ ],
    "configuration": [
        {
            "default": "/dev/k8056",
            "description": "k8056 serial device",
            "key": "k8056_device",
            "name" : "K8056 serial device",
            "required": true,
            "type": "string"
        }
    ], 
    "device_types": {
        "k8056.relay": {
            "id": "k8056.relay",
            "description": "k8056 relay", 
            "name": "k8056 relay",
            "commands": ["cmd_switch_relay"],
            "sensors": ["sensor_switch_relay"],
            "parameters": [
                {
                    "key": "address",
                    "xpl": true,
                    "description": "The address of the k8056 board (805600001..805600255)",
                    "type": "integer",
                    "max_value": 805600255,
                    "min_value": 805600001
                },
                {
                    "key": "unit",
                    "xpl": true,
                    "description": "Relay number (1..9)",
                    "type": "integer",
                    "max_value": 9,
                    "min_value": 1
                }
            ]
	}
    },
    "commands": { 
        "cmd_switch_relay" : {
            "name" : "Cmd switch relay",
            "return_confirmation" : true,
            "parameters" : [
                {
                    "key" : "command",
                    "data_type" : "DT_Switch",
                    "conversion" : "from_DT_Switch_to_off_on" 
                }
            ],
            "xpl_command" : "set_switch_relay"
        }
    },
    "xpl_commands": {
        "set_switch_relay" : {
            "name": "Set switch relay",
            "schema": "ac.basic",
            "xplstat_name": "stat_switch_relay",
            "parameters": {
                "static": [],
                "device": []
            }
        }
     }, 
    "sensors": {
        "sensor_switch_relay": {
            "name": "Sensor switch relay",
            "incremental" : false,
            "data_type": "DT_Switch",
            "conversion" : "from_off_on_to_DT_Switch",
            "timeout" : 0,
            "history": {
                "store": true,
                "duplicate" : false,
                "max": 0,
                "expire": 0,
                "round_value": 0
            }
        }
    },
    "xpl_stats": {
       "stat_switch_relay": {
            "name": "Stat switch relay",
            "schema": "ac.device",
            "parameters": {
                "static": [],
                "device": [],
                "dynamic": [
                    {
                         "key": "command",
                         "ignore_values": "",
                         "sensor": "sensor_switch_relay"
                    }
                ]
            }
       }
    }
}
